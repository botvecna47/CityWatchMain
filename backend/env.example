# Database
DATABASE_URL="postgresql://username:password@localhost:5432/citywatch_db"

# Server
PORT=5000
NODE_ENV=development

# JWT Secrets
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"

# Duplicate Detection (Optional)
DUPLICATE_CHECK_ENABLED=true
DUPLICATE_GEO_RADIUS_METERS=100
DUPLICATE_TIME_WINDOW_MINUTES=1440
DUPLICATE_EMBEDDING_THRESHOLD=0.78

# AI Embeddings (Optional - choose one)
# For local Ollama (recommended for privacy)
OLLAMA_URL=http://localhost:11434

# For OpenAI (requires API key)
# OPENAI_API_KEY=your-openai-api-key-here